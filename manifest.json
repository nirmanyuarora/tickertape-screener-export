{
  "manifest_version": 3,
  "name": "Tickertape Screener Export",
  "version": "1.0",
  "description": "Auto-scrolls a dynamic table, loads all rows, and downloads as CSV.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://www.tickertape.in/*"],
  "action": {
    "default_title": "Tickertape Screener Export",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
